extends ../../layouts/default.pug 
block main 
    .card.mb-3
        .card-header Danh sách 
            .card-body 
                .row 
                    .col-8
                        a(
                            href=`${prefixedAdmin}/account/create`
                            class="btn btn-outline-success"
                        ) +Thêm
    .card.mb-3 
        .card-header Danh sach 
            .card-body 
                table(
                    class="table.table-hover.table-sm"
                )
                    thead 
                        tr 
                            th STT
                            th Ten
                            th Phan quyen 
                            th Email 
                    tbody                        
                        each item,index in records
                            tr
                                    td #{index+1}   
                                    td #{item.fullName}
                                    td #{item.role.title}
                                    td #{item.email}