extends ../../layouts/default.pug    

block main 
    h1 San pham noi bat

        .row 
            each item in productsFeature
                .col-4.mb-3 
                    .product-item 
                        .inner-image    
                            img(
                            src=item.thumbnail
                            alt=item.title 
                            )
                        .inner-content 
                            h3.inner-title 
                                a(href=`/product/${item.slug}`) #{item.title} 
                            .inner-price #{item.price.toFixed(2)}
                            if(item.total)
                                .inner-price-old #{item.total.toFixed(2) }
                            .inner-sale #{item.discountedTotal}
