extends ../../layouts/default.pug 
block main 
    h1 Giỏ hàng
    .card.mb-3 
        .card-header Danh sách 
            .card-body
                .row 
                table(
                    class="table.table-hover.table-sm"
                    checkbox-multi 
                    ) 
                    thead 
                        tr 
                        
                            th STT
                            th Hình ảnh
                            th Tên 
                            th Giá
                            th Số lượng
                            th Tổng tiền
                            th Hành động 
                    
                    tbody 

                        each item,index in cartDetail.products
                                tr 
                                    td #{index+1}
                                    td 
                                        img(
                                            src=item.infProduct.thumbnail
                                            alt="san pham"
                                            width="100px"
                                            height="auto"
                                        )
                                    td #{item.infProduct.title}
                                    td #{item.infProduct.price}$
                                    td
                                        input(
                                            type="number"
                                            value=item.quantity 
                                            style="width: 60px"
                                            min="1"
                                            name="quantity"
                                            item-id=item.product_id
                                        )
                                    td tien                                       
                                    td 
                                        a(
                                            class="btn btn-warning btn-sm"
                                            href=`/cart/delete/${item.product_id}`
                                        ) Xóa
    a(
        class="btn btn-success"
        href="/checkout"
    ) Thanh toán
    script(src="/js/cart.js")