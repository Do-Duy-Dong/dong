extends ../../layouts/default.pug
block main
    h1 san pham
    .card.mb-3 
        .card-header Danh sách 
            .card-body
                .row 
                table(
                    class="table.table-hover.table-sm"
                    checkbox-multi 
                    ) 
                    thead 
                        tr 
                        
                            th STT
                            th Hình ảnh
                            th Tên 
                            th Giá
                            th Số lượng
                            th Tổng tiền
                           
                    
                    tbody 

                        each item,index in cartDetail.products
                                tr 
                                    td #{index+1}
                                    td 
                                        img(
                                            src=item.infProduct.thumbnail
                                            alt="san pham"
                                            width="100px"
                                            height="auto"
                                        )
                                    td #{item.infProduct.title}
                                    td #{item.infProduct.price}$
                                    td  #{item.quantity}
                                    td Tien                                       
    .card.mb-3 
        .card-header
            .card-body
                .row
                    form(
                        action=`/checkout/success/${orderId}`    
                        method="POST"
                    )
                        div(class="form-group")
                            label(for="fullName")  Ho va ten
                            input(
                                type="text"
                                class="form-control"
                                id="fullName"
                                name="fullName"
                                required 
                                
                            )
                        div(class="form-group")
                            label(for="phone") SDT
                            input(
                                type="text"
                                class="form-control"
                                id="phone"
                                name="phone"
                                cols="50"
                                rows="5"
                            )
                        div(class="form-group")
                            label(for="address")  Địa chỉ
                            input(
                                type="text"
                                class="form-control"
                                id="address"
                                name="address"
                            
                                
                            )                             
                        button( 
                            type="submit"
                            class="btn btn-primary"
                        )  Thanh toán