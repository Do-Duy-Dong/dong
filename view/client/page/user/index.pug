extends ../../layouts/default.pug
block main 
    h1 login
    .card.mb-3 
        .card-header
            .card-body
                .row
                    form(
                        action=`/user/register`    
                        method="POST"
                    )
                        div(class="form-group")
                            label(for="fullName")  Ho va ten
                            input(
                                type="text"
                                class="form-control"
                                id="fullName"
                                name="fullName"
                                required 
                                
                            )
                        div(class="form-group")
                            label(for="email") Email
                            input(
                                type="text"
                                class="form-control"
                                id="email"
                                name="email"
                                cols="50"
                                rows="5"
                            )
                        div(class="form-group")
                            label(for="password")  Mật khẩu
                            input(
                                type="text"
                                class="form-control"
                                id="password"
                                name="password"                              
                            )
                        button( 
                            type="submit"
                            class="btn btn-primary"
                        )  Đăng ký   